{
  "name": "ntgc-aikb",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "serve": "node server.js",
    "clean": "rimraf dist",
    "prepare:dist": "node -e \"require('fs').mkdirSync('dist',{recursive:true})\"",
    "build:landing-css": "postcss src/css/landing-page.css --env production --map --output dist/landing-page.min.css",
    "build:content-css": "postcss src/css/content-page.css --env production --map --output dist/content-page.min.css",
    "build:landing-js": "esbuild src/js/landing-page.js --bundle --format=iife --minify --sourcemap --outfile=dist/landing-page.min.js",
    "build:content-js": "esbuild src/js/content-page.js --bundle --format=iife --minify --sourcemap --outfile=dist/content-page.min.js",
    "watch:landing-css": "postcss src/css/landing-page.css --watch --map --output dist/landing-page.min.css",
    "watch:content-css": "postcss src/css/content-page.css --watch --map --output dist/content-page.min.css",
    "watch:landing-js": "esbuild src/js/landing-page.js --bundle --format=iife --sourcemap --watch --outfile=dist/landing-page.min.js",
    "watch:content-js": "esbuild src/js/content-page.js --bundle --format=iife --sourcemap --watch --outfile=dist/content-page.min.js",
    "build": "npm-run-all prepare:dist build:landing-css build:content-css build:landing-js build:content-js",
    "build:all": "npm run build",
    "dev": "npm-run-all prepare:dist --parallel watch:landing-js watch:landing-css watch:content-js watch:content-css serve",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "cssnano": "^6.0.1",
    "esbuild": "^0.27.1",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.33",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.1",
    "rimraf": "^5.0.5"
  }
}
