{
  "name": "ntgc-aikb",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "serve": "node server.js",
    "clean": "rimraf dist",
    "prepare:dist": "node -e \"require('fs').mkdirSync('dist',{recursive:true})\"",
    "build:js": "esbuild src/js/index.js --bundle --format=iife --minify --sourcemap --outfile=dist/aikb_scripts.min.js",
    "watch:js": "esbuild src/js/index.js --bundle --format=iife --sourcemap --watch --outfile=dist/aikb_scripts.min.js",
    "build:css": "postcss src/css/index.css --env production --map --output dist/AIKB_styles.min.css",
    "watch:css": "postcss src/css/index.css --watch --map --output dist/AIKB_styles.min.css",
    "build": "npm-run-all prepare:dist build:js build:css",
    "dev": "npm-run-all prepare:dist --parallel watch:js watch:css serve",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "cssnano": "^6.0.1",
    "esbuild": "^0.27.1",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.33",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.1",
    "rimraf": "^5.0.5"
  }
}
